@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
}

<h1 class="text-info">List Of Users</h1>
<a asp-action="Add" class="btn btn-outline-primary"> Add New User</a>
<table class="table table-bordered table-striped table-hover mt-4">
    <thead>
        <tr  class="bg-info text-white ">
        <th>First Name</th>
        <th>Last Name</th>
        <th>user Name</th>
        <th>Email</th>
        <th>Roles</th>
        <th>Actions</th>
    </tr>

    </thead>
    <tbody>
        @foreach (var User in Model)
        {
            <tr>
                <td>@User.FirstNmae</td>
                <td>@User.LastName</td>
                <td>@User.UserName</td>
                <td>@User.Email</td>
                <td> @string.Join(" , ",  @User.Roles.ToList())</td>
                <td>
                    <a asp-action="ManageRoles" asp-controller="Users" class="btn btn-outline-info" asp-route-id="@User.Id">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>