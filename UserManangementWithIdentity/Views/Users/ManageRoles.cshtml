@model UserRolesViewModel
@{
    ViewData["Titlt"] = "Manage Roles";
}
<form method="post" asp-action="ManageRoles">
    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            <h2> @Model.UserName</h2>
            Add/Remove Roles
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="UserId" />
            @for (var i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input"/>
                    <label class="form-check-label" asp-for="@Model.Roles[i].IsSelected">
                        @Model.Roles[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary=All class="text-danger"></div>
        </div>
        <div class="card-footer bg-secondary text-white">
            <input type="submit" class="btn btn-primary"  value="Save"/>
            <a asp-action="Index" asp-controller="Users" class="btn btn-dark"> Cancel</a>
        </div>
    </div>

</form>